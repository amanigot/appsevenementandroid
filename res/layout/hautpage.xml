<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgtitreapplication" >

        <Button
            android:id="@+id/buttonInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icomenuhautinfobig"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewTitreApplication"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:gravity="center" />

        <Button
            android:id="@+id/buttonActualiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icomenuhautrafraichirbig" />

    </LinearLayout>

</LinearLayout>