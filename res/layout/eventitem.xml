<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <ImageView
            android:id="@+id/imageEventDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/illustaucuneimage480" />
        
        <TextView
            android:id="@+id/textViewTitreEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#64000000"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/suivant"
            android:layout_width="wrap_content"
            android:layout_height="111dp"
            android:layout_gravity="center_vertical|right"
            android:paddingRight="15dp"
            android:paddingLeft="5dp"
            android:src="@drawable/icoslideevenementsuivant" 
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/precedent"
            android:layout_width="wrap_content"
            android:layout_height="111dp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:src="@drawable/icoslideevenementprecedent"
            android:visibility="gone" />
        
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/textViewDateEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lieu"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/textViewLieuEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="TextView"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>