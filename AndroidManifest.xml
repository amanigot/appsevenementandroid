<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.clivana.lemansnews"
    android:versionCode="9"
    android:versionName="1.0.1" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="8"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <permission
        android:name="fr.clivana.lemansnews.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="fr.clivana.lemansnews.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <supports-screens android:smallScreens="false" android:normalScreens="true" android:largeScreens="true"/>
    
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        
    
     	<activity android:name=".vue.VuePrincipaleActivity" 
       		android:theme="@android:style/Theme.NoTitleBar"
        	android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
     	<activity android:name=".vue.ListeNewsFavorisActivity" 
       		android:theme="@android:style/Theme.NoTitleBar"
        	android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
     	<activity android:name=".vue.ListeEvenementsFavorisActivity" 
       		android:theme="@android:style/Theme.NoTitleBar"
        	android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
     	<activity android:name=".vue.SplashActivity" 
       		android:theme="@android:style/Theme.NoTitleBar"
        	android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
     	<activity android:name=".vue.CategoriesActivity" 
       		android:theme="@android:style/Theme.NoTitleBar"
        	android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
     	
     	<activity android:name=".vue.GridNewsActivity" 
       		android:theme="@android:style/Theme.NoTitleBar"
        	android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
     	<activity android:name=".vue.DetailNewsActivity" 
       		android:theme="@android:style/Theme.NoTitleBar"
        	android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
     	<activity android:name=".vue.ListeEvenementsActivity" 
       		android:theme="@android:style/Theme.NoTitleBar"
        	android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
     	<activity android:name=".vue.DetailEvenementActivity" 
       		android:theme="@android:style/Theme.NoTitleBar"
        	android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
     	<activity android:name=".vue.InfoActivity" 
       		android:theme="@android:style/Theme.NoTitleBar"
        	android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
     	<activity android:name=".vue.FavorisActivity" 
       		android:theme="@android:style/Theme.NoTitleBar"
        	android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
     	<service android:permission="android.permission.INTERNET" android:name=".utils.SingletonService"></service>
     	
     	<receiver
            android:name=".c2dm.C2DMRegistrationReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter >
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" >
                </action>

                <category android:name="fr.clivana.lemansnews" />
            </intent-filter>
        </receiver>
     	
     	<receiver android:name=".c2dm.C2DMMessageReceiver"
			android:permission="com.google.android.c2dm.permission.SEND">
			<intent-filter>
				<action android:name="com.google.android.c2dm.intent.RECEIVE"></action>
				<category android:name="fr.clivana.lemansnews" />
			</intent-filter>
		</receiver>
     	
     	<activity android:name="RegistrationResultActivity" >
        </activity>
        <activity android:name="MessageReceivedActivity" >
        </activity>
     	
	 </application>
</manifest>
